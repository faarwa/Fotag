/* Put any additional CSS here */

body {
	margin: 0px;
	padding: 0px;
	font-family: 'HelveticaNeue-Light';
	background-color: #F5FAFA;
}

#header-title {
	display: inline-block;
	padding-right: 10px;
	font-family: 'HelveticaNeue-Light';
	font-size: 40px;
	padding-bottom: 1px;
}

.files-input {
	margin-top: 120px;
	margin-left: 20px;
	font-family: 'HelveticaNeue-Light';
	font-size: 15px;
}

#clear-filter-button {
	background-color: rgba(0,0,0,0.2);
	font-family: 'HelveticaNeue-Light';
	font-size: 14px;
	border: 1px solid black;
}

.view-button {
	display: inline-block;
	border: 1px solid black;
	background-color: rgba(0,0,0,0);
}

.view-button-selected {
	border: 3px solid black;
}

.view-button:active, 
.view-button:focus, 
{
    border:0.5em solid #00c; /* here configure as your needs */
    color:#00c;
}

.selected-large-image {
	position: absolute;
	width: 100%;
	height: 100%;
	text-align: center;
	top: 0;
	left: 0;
	z-index: 1000000;
	background: rgba(1,1,1,0.5);
}

.selected-image {
	position: relative;
	vertical-align: center;
	margin: auto;
	margin-top: 20px;
}

.nav-bar {
	position: fixed;
	width: 100%;
	text-align: center;
	padding-bottom: 10px;
	background-color: #C1DAD6;
	border-bottom: 3px solid #6D929B;
}

#clear-filter-button {
	display: inline-block;
}

.image-caption-editable {
	width: 250px;
	font-style: italic;
}

@media screen and (max-width: 760px) {
	div.image-view img {
		width: 90%;
	}
}

.image-view {
	padding: 10px;
}

.image-grid {
	width: 400px;
	height: 300px;
}

.image-list {
	width: 400px;
	height: 300px;
}

.image-view-grid {
	display: inline-block;
}

.image-view-list {
	text-align: center;
}

.img-metadata-list {
	display: inline-block;
	text-align: left;
}

/* Star rating code was used from this blog post:
 * http://css-tricks.com/star-ratings/  
 */

.rating {
	display: inline-block;
  	unicode-bidi: bidi-override;
  	direction: rtl;
  	text-align: center;
}
.rating > span {
  	display: inline-block;
  	position: relative;
  	width: 1.1em;
  	z-index: -2;
}
.rating > *:hover,
.rating > *:hover ~ span,
.rating:not(:hover) > input:checked ~ span {
  	color: transparent;
}
.rating > *:hover:before,
.rating > *:hover ~ span:before,
.rating:not(:hover) > input:checked ~ span:before {
   	content: "\2605";
   	position: absolute;
   	left: 0; 
   	color: black;
}
 
.rating > input {
   margin-left:-1.1em;
   margin-right:0;
   top:3px;
   width:1.1em;
   height:1.1em;
   position:relative;
   z-index:2;
   opacity:0;
}